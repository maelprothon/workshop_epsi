<div class="jumbotron">

    <h2>Modification newsletter</h2>
    <form class="form-inline" name="myForm2" novalidate>
        <div class="form-group">
            <input type="text" id="search" ng-model="search"class="form-control" placeholder="Rechercher une newsletter..." required/>
            <span style="color:red" ng-show="myForm.search.$dirty && myForm.search.$invalid">
                <span ng-show="myForm.search.$error.required">Newsletter est required.</span>
            </span>
            <button class="btn btn-success" type="submit" >Charger</button>
        </div>
    </form>

    <form class="input-group" name="myForm" novalidate>
        <div class="form-group">
            <label for="listEmail">List destinataire </label>
            <input type="text" ng-model="newsletter.destinataire" class="form-control" required="required" disable/>
        </div>
       	<div class="form-group">
            <label for="titre">Nom </label>
            <input type="text" ng-model="newsletter.nom" value="nom" class="form-control" required="required"/>
            <span ng-show="myForm.newsletter.nom.$error.required">Email is required.</span>
        </div>
        <div class="form-group">
            <label for="sujet">Sujet</label>
            <input type="text" ng-model="newsletter.sujet" value="sujet" class="form-control" required="required"/>
        </div>
        <div class="form-group">
            <label for="text">Texte:</label>
            <textarea type="text" ng-model="newsletter.text" class="form-control" rows="5" value="" required="required"></textarea>
        </div>
        <button class="btn btn-success right" type="button" ng-click="updateNewsLetters(newsletter)">Modifier</button>

        <button class="btn btn-danger right" type="button" ng-click="cancelSubmit()">Cancel</button>

    </form>

    <tr ng-repeat="name in names">
        <td>{{name}}</td>
    </tr>
</div>